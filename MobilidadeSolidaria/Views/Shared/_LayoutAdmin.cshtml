<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Mobilidade Solidária - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <div class="d-flex">
        <!--sidebar-->
        <div class="sidebar d-flex flex-column">
            <div class="logo-container">
                <img src="~/images/LogoCompletaSemFundo.png" alt="Logo Mobilidade Solidária" />
            </div>
            <a href="/admin" class="active"><i class="fa fa-house me-2"></i>Principal</a>
            <a href="/admin/usuarios"><i class="fa fa-users me-2"></i>Usuários</a>
            <a href="/admin/categorias"><i class="fa fa-list me-2"></i>Categorias</a>
            <a href="/admin/equipamentos"><i class="fa fa-wheelchair me-2"></i>Equipamentos</a>
        </div>

    </div>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-white">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3 text-dark" asp-controller="Admin" asp-action="Index">Mobilidade Solidária</a>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown"
                    aria-expanded="false"><i class="fas fa-user fa-fw fs-4"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Settings</a></li>
                    <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                    <li>
                        <hr class="dropdown-divider" />
                    </li>
                    <li><a class="dropdown-item" href="#!">Sair</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a class="nav-link mt-3" asp-controller="Admin" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Principal
                        </a>
                        <a class="nav-link mt-3" asp-controller="Usuários" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-users    "></i></div>
                            Usuários
                        </a>
                        <a class="nav-link" asp-controller="Categorias" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Categorias
                        </a>
                        <a class="nav-link" asp-controller="Equipamentos" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Equipamentos
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Start Bootstrap
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Mobilidade Solidaria @DateTime.Now.Year</div>
                        <div>
                            <a href="#">Políticas de Privacidade</a>
                            &middot;
                            <a href="#">Termos &amp; Condições</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<style>
    body {
        background-color: #f8f9fa;
    }

    .sidebar {
        width: 240px;
        background-color: #072F57;
        color: white;
        height: 100vh;

    }

    .sidebar a {
        color: #d1e7dd;
        text-decoration: none;
        display: block;
        padding: 10px 20px;
        margin: 10px;
    }

    .sidebar a.active,
    .sidebar a:hover {
        background-color: #A5D6A7;
        color: #072F57;
        border-radius: 20px;
    }

    .logo-container {
        padding: 1rem;
        background-color: rgb(241, 241, 241);
        text-align: center;
    }

    .logo-container img {
        max-width: 100%;
        height: 150px;

    }

    .header {
        background-color: white;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .main-content {
        padding: 2rem;
    }
</style>



</html>