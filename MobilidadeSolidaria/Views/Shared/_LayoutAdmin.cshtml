<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Mobilidade Solidária - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <div class="d-flex flex-grow-1 min-vh-100">
        <!--sidebar-->
        <div class="d-flex flex-column sidebar">
            <div class="logo-container">
                <img src="~/images/LogoCompletaSemFundo.png" alt="Logo Mobilidade Solidária" />
            </div>

            <a class="nav-link mt-2 px-4 py-2 text-black fw-semibold @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")"
                asp-controller="Admin" asp-action="Index">
                <i class="fas fa-home me-2"></i>Principal
            </a>

            <a class="nav-link mt-2 px-4 py-2 text-black fw-semibold @(ViewContext.RouteData.Values["controller"]?.ToString() == "Usuários" ? "active" : "")"
                asp-controller="Usuários" asp-action="Index">
                <i class="fas fa-users me-2"></i>Usuários
            </a>

            <a class="nav-link mt-2 px-4 py-2 text-black fw-semibold @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categorias" ? "active" : "")"
                asp-controller="Categorias" asp-action="Index">
                <i class="fas fa-list me-2"></i>Categorias
            </a>

            <a class="nav-link mt-2 px-4 py-2 text-black fw-semibold @(ViewContext.RouteData.Values["controller"]?.ToString() == "Equipamentos" ? "active" : "")"
                asp-controller="Equipamentos" asp-action="Index">
                <i class="fas fa-wheelchair me-2"></i>Equipamentos
            </a>

            <a class="nav-link mt-2 px-4 py-2 text-black fw-semibold @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                asp-controller="Home" asp-action="Index">
                <i class="fas fa-left-long me-2"></i>Pagina principal
            </a>
        </div>

        <!-- Conteúdo principal -->
        <div class="flex-grow-1">
            <!-- Header -->
            <div style="padding-top: 45px; padding-left: 30px;">
                <h2 class="m-0" style="font-size:40px; color: #072F57; font-weight: 700;">ÁREA ADMINISTRATIVA</h2>
            </div>

            <!-- Conteúdo dinâmico -->
            <div class="main-content">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<style>
    html,
    body {
        height: 100%;
        margin: 0;
        background-color: #f8f9fa;
    }


    .sidebar {
        width: 240px;
        background-color: #f8f9fa;
        color: white;
        min-height: 100vh;
    }

    .d-flex-admin {
        min-height: 100vh;
        /* Cresce com o conteúdo, mas nunca é menor que a tela */
        display: flex;
    }

    .sidebar a {
        color: #d1e1e7;
        text-decoration: none;
        display: block;
        padding: 10px 20px;
        margin: 10px;
    }

    .sidebar a.active,
    .sidebar a:hover {
        background-color: #A5D6A7;
        color: #072F57;
        border-radius: 20px;
    }

    .logo-container {
        padding: 1rem;
        background-color: #f8f9fa;
        text-align: center;
    }

    .logo-container img {
        max-width: 100%;
        height: 150px;

    }

    .header {
        background-color: white;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .main-content {
        padding: 2rem;
    }
</style>



</html>