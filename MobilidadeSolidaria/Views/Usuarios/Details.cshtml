@model MobilidadeSolidaria.Models.Usuario

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Usuários</h1>
<h4 class="mb-4">Detalhes</h4>

<div class="card my-4 border-dark border-2 rounded-1">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8 col-lg-10">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label mb-0"></label>
                    <input asp-for="Nome" class="form-control p-1 border-dark border-2 rounded-1" readonly />

                    <label asp-for="DataNascimento" class="form-label mt-3 mb-0"></label>
                    <input asp-for="DataNascimento" class="form-control p-1 border-dark border-2 rounded-1" readonly />

                    <label asp-for="Email" class="form-label mt-3 mb-0"></label>
                    <input asp-for="Email" class="form-control p-1 border-dark border-2 rounded-1" readonly />

                    <label asp-for="PhoneNumber" class="form-label mt-3 mb-0"></label>
                    <input asp-for="PhoneNumber" class="form-control p-1 border-dark border-2 rounded-1" readonly />
                </div>

                <p class="mb-0">Foto</p>
                <div class="col-md-4 col-lg-2">
                    @if (!string.IsNullOrEmpty(Model.Foto))
                    {
                        <img src="~/@Model.Foto" asp-append-version="true" alt="Foto do Usuário" class="img-fluid w-100" />
                    }
                    else
                    {
                        <div class="alert alert-warning mt-2" role="alert">
                            <i class="fas fa-exclamation-circle me-1"></i> O usuário não possui uma foto cadastrada.
                        </div>
                    }
                </div>


            </div>
        </div>
        <div class="d-flex mt-4">
            <a asp-action="Index" class="btn btn-outline-info">
                <i class="fas fa-home me-1"></i> Voltar
            </a>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial.cshtml"></partial>
        <script>
            document.querySelector("input[type='file']").addEventListener('change', function () {
                if (this.files && this.files[0]) {
                    var img = document.getElementById("Preview");
                    img.src = URL.createObjectURL(this.files[0]);
                }
            });

        </script>
    }
</div>
</div>