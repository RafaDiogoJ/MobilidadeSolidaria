@model MobilidadeSolidaria.Models.Equipamento

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Equipamentos</h1>
<h4 class="mb-4">Detalhes</h4>

<div class="card my-4 border-dark border-2 rounded-1">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8 col-lg-10">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control p-1 border-dark border-2 rounded-1" readonly />

                    <label asp-for="Descricao" class="form-label mt-3 mb-0"></label>
                    <input asp-for="Descricao" class="form-control p-1 border-dark border-2 rounded-1" readonly />

                    <label asp-for="Status" class="form-label mt-3 mb-0"></label>
                    <input asp-for="Status" class="form-control p-1 border-dark border-2 rounded-1" readonly />

                    <label asp-for="Cidade" class="form-label mt-3 mb-0"></label>
                    <input asp-for="Cidade" class="form-control p-1 border-dark border-2 rounded-1" readonly />

                    <label asp-for="Estado" class="form-label mt-3 mb-0"></label>
                    <input asp-for="Estado" class="form-control p-1 border-dark border-2 rounded-1" readonly />

                    <label asp-for="Usuario" class="form-label mt-3 mb-0"></label>
                    <input asp-for="Usuario.Nome" class="form-control p-1 border-dark border-2 rounded-1" readonly />

                </div>

                <p class="mb-0">Foto</p>
                <div class="col-md-4 col-lg-2">
                    @if (Model.Fotos != null && Model.Fotos.Any())
                    {
                        <div class="row">
                            @foreach (var foto in Model.Fotos)
                            {
                                <div class="col-md-3 mb-3">
                                    <img src="@Url.Content(foto.ArquivoFoto)" alt="@foto.Descricao" style="height: 200px;" />
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mt-2" role="alert">
                            <i class="fas fa-exclamation-circle me-1"></i> Equipamento n√£o possui foto.
                        </div>
                    }
                </div>



            </div>
        </div>
        <div class="d-flex mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning me-2">
                <i class="fas fa-edit me-1"></i> Alterar
            </a>
            <a asp-action="Index" class="btn btn-outline-info">
                <i class="fas fa-home me-1"></i> Voltar
            </a>
        </div>
    </div>
    <div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial.cshtml"></partial>
            <script>
                document.querySelector("input[type='file']").addEventListener('change', function () {
                    if (this.files && this.files[0]) {
                        var img = document.getElementById("Preview");
                        img.src = URL.createObjectURL(this.files[0]);
                    }
                });

            </script>
        }