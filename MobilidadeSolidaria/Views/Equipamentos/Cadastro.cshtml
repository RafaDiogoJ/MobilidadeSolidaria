@model MobilidadeSolidaria.ViewModels.CadastroEquipamentoVM
@{
    ViewData["Title"] = "Cadastro de Equipamento";
}

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h2 class="mb-4 text-center">Cadastro de Equipamento</h2>
                    <form asp-action="Cadastrar" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Nome" class="mb-0 fw-semibold">Nome</label>
                            <input class="form-control" asp-for="Nome" />
                            <span asp-validation-for="Nome" class="text-danger text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="Descricao" class="mb-0 fw-semibold">Descrição</label>
                            <input class="form-control" asp-for="Descricao" />
                            <span asp-validation-for="Descricao" class="text-danger text-sm"></span>
                        </div>
                        <div class="mt-3 mb-3">

                            <label asp-for="Categoria" class="mb-0 fw-semibold"></label>
                            <span asp-validation-for="Categoria" class="text-danger text-sm"></span>
                            <select class="form-select" id="CategoriaId" name="CategoriaId"
                                style="font-weight: lighter;" required>
                                <option value="">Selecione</option>
                                @foreach (var categoria in ViewBag.Categorias as List<SelectListItem>)
                                {
                                    <option value="@categoria.Value">@categoria.Text</option>
                                }
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="Imagem" class="form-label fw-semibold mb-0">Fotos do Equipamento</label>
                            <div class="border border-2 rounded-3 p-4 text-center bg-light position-relative">
                                <input type="file"
                                    class="form-control position-absolute top-0 start-0 w-100 h-100 opacity-0"
                                    id="Imagem" name="Imagem" accept="image/*">
                                <div>
                                    <i class="bi bi-cloud-upload" style="font-size: 2rem; color: #0d6efd;"></i>
                                    <p class="mt-2 mb-0 text-muted">Clique ou arraste uma imagem aqui</p>
                                </div>
                            </div>
                        </div> 


                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg"
                                style="background-color: #4ca9c5;">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>