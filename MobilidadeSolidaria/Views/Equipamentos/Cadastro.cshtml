@model MobilidadeSolidaria.ViewModels.EquipamentoVM
@{
    ViewData["Title"] = "Cadastro de Equipamento";
}

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h2 class="mb-4 text-center">Cadastro de Equipamento</h2>
                    <form asp-action="Cadastrar" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="Nome" class="form-label" style=" font-weight: bold;">Nome do Equipamento</label>
                            <input type="text" class="form-control" style="font-weight: lighter;" id="Nome" name="Nome" placeholder="Ex: Cadeira de rodas" required>
                        </div>

                        <div class="mb-3">
                            <label for="Descricao" class="form-label" style=" font-weight: bold;">Descrição</label>
                            <textarea class="form-control" style= "font-weight: lighter;" id="Descricao" name="Descricao" rows="4" placeholder="Descreva o máximo de informações possíveis" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="Categoria" class="form-label">Categoria</label>
                            <select class="form-select" id="Categoria" name="Categoria" required>
                                <option value="">Selecione</option>
                                <option value="Cadeira de rodas">Cadeira de rodas</option>
                                <option value="Andador">Andador</option>
                                <option value="Bengala">Bengala</option>
                                <option value="Outros">Outros</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="Condicao" class="form-label">Condição</label>
                            <select class="form-select" id="Condicao" name="Condicao" required>
                                <option value="">Selecione</option>
                                <option value="Novo">Novo</option>
                                <option value="Usado - Bom estado">Usado - Bom estado</option>
                                <option value="Usado - Com desgaste">Usado - Com desgaste</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="Imagem" class="form-label">Imagem do Equipamento</label>
                            <input type="file" class="form-control" id="Imagem" name="Imagem" accept="image/*">
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>